@{
    Layout = "_Layout";
}
<center>
    <h1>List Pokemon</h1>
</center>

<table id="poke" class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tablePoke">
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalPokeDetail" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Detail Pokemon</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
                <div class="container">
                    <div>
                        <input type="text" id="search_bar" min="1" max="151">
                        <span>
                            <button id="search">
                                <svg stroke="currentColor" fill="currentColor" stroke-width="0"
                                     viewBox="0 0 1024 1024" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M909.6 854.5L649.9 594.8C690.2 542.7 712 479 712 412c0-80.2-31.3-155.4-87.9-212.1-56.6-56.7-132-87.9-212.1-87.9s-155.5 31.3-212.1 87.9C143.2 256.5 112 331.8 112 412c0 80.1 31.3 155.5 87.9 212.1C256.5 680.8 331.8 712 412 712c67 0 130.6-21.8 182.7-62l259.7 259.6a8.2 8.2 0 0 0 11.6 0l43.6-43.5a8.2 8.2 0 0 0 0-11.6zM570.4 570.4C528 612.7 471.8 636 412 636s-116-23.3-158.4-65.6C211.3 528 188 471.8 188 412s23.3-116.1 65.6-158.4C296 211.3 352.2 188 412 188s116.1 23.2 158.4 65.6S636 352.2 636 412s-23.3 116.1-65.6 158.4z">
                                    </path>
                                </svg>
                            </button>
                        </span>
                    </div>
                    <div class="card">
                        <div id="health">
                            <button type="button" class="btn btn-danger btn-sm"> HP: <span id="hp"></span></button>
                        </div>

                        <div id="sprite">
                            <img id="image">
                        </div>
                        @*                        <div id="sprite2">
                        <img id="image">
                        </div>*@

                        <h5 style="word-spacing: 8px;">Name: <span id="pokeName"></span></h5>
                        <div class="d-grid gap-2 d-sm-block">
                            <button type="button" class="btn btn-success btn-sm"><span id="jurus"></span></button>
                            <button id="btn2" type="button" class="btn btn-warning btn-sm text-light"><span id="jurus2"></span></button>
                        </div>
                        <div style="margin-left:-350px; margin-top: 10px; margin-bottom: -20px;">Attack</div>
                        <div class="progress ms-auto" id="stats">
                            <div id="a" class="progress-bar progress-bar-striped bg-danger" role="progressbar" style='width: 100%' aria-valuemin="0" aria-valuemax="100">90<p id="attack"></p></div>
                        </div>

                        <div style="margin-left:-290px; margin-top: 10px; margin-bottom: -20px;">Special Attack</div>
                        <div class="progress ms-auto" id="stats">
                            <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">90<p id="specialattack"></p></div>
                        </div>

                        <div style="margin-left:-340px; margin-top: 10px; margin-bottom: -20px;">Defense</div>
                        <div class="progress ms-auto" id="stats">
                            <div class="progress-bar progress-bar-striped bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">90<p id="defence"></p></div>
                        </div>

                        <div style="margin-left:-275px; margin-top: 10px; margin-bottom: -20px;">Special Defense</div>
                        <div class="progress ms-auto" id="stats">
                            <div class="progress-bar progress-bar-striped bg-primary" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100<p id="specialdefence"></p></div>
                        </div>

                        <div style="margin-left:-350px; margin-top: 10px; margin-bottom: -20px;">Speed</div>
                        <div class="progress ms-auto" id="stats">
                            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100<p id="speed"></p></div>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto mt-3">
                            <button id="btn" class="btn btn-primary">Generate</button>
                        </div>
                    </div>
                </div>

            </div>
@*            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" >Save changes</button>
            </div>*@
        </div>
    </div>
</div>

